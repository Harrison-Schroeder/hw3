<!-- Place details page -->


<h1><%= @place["name"] %></h1>

<!-- Placing New Entry at top so it doesn't get buried under list of events -->
<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

  <% for entry in @entries %>
    <h3> <%= entry["title"] %> </h3>
    <p>  <%= entry["occurred_on"] %> </p>
    <p>  <%= entry["description"] %> </p>
  <% end %>

<br>

<form action="/places/<%= @place["id"] %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete Place</button>
</form>

<br> 

<p><a href="/places">Back to All Places</a></p>
